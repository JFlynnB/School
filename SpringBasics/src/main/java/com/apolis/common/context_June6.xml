<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="owner1" class="com.apolis.Day12_June6.Owner">
		<constructor-arg name="firstName" value="Joshua" />
		<constructor-arg name="lastName" value="Billinghurst" />
		<property name="myPet" ref="cat1" />
	</bean>
	<bean id="cat1" class="com.apolis.Day12_June6.Pet">
		<property name="name" value="Snarglebartfast" />
		<property name="animalType" value="cat" />
		<property name="myOwner" ref="owner1"/>
	</bean>
	
	<bean id="plumber1" class="com.apolis.Day12_June6.Plumber">
		<property name="firstName" value="Rob" />
		<property name="lastName" value="Neumann" />
		<property name="toolList">
			<list>
				<value>wrench</value>
				<value>pipe cutter</value>
				<value>torch</value>
			</list>
		</property>
	</bean>
	<bean id="plumber2" class="com.apolis.Day12_June6.Plumber" parent="plumber1">
	<property name="toolList">
			<list merge="true">
				<value>pliers</value>
				<value>hammer</value>
			</list>
		</property>
	</bean>

</beans>
